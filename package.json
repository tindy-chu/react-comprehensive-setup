{
  "name": "react-comprehensive-setup",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "yarn postinstall && yarn generate-env && yarn validate; concurrently 'yarn vite --host' 'yarn watch-css' 'yarn watch-js' 'yarn watch-env'",
    "build": "yarn validate && vite build && cp dist/index.html dist/404.html",
    "preview": "vite preview",
    "prettier-validate": "prettier --check .",
    "prettier-fix": "prettier --write --list-different .",
    "style-validate": "stylelint '**/*.{css,scss}' --ignore-path .gitignore",
    "style-fix": "stylelint '**/*.{css,scss}' --ignore-path .gitignore --fix",
    "postinstall": "husky",
    "es-validate": "eslint . --ext ts,tsx && tsc --noEmit",
    "es-fix": "eslint . --ext ts,tsx --fix && tsc --noEmit",
    "validate": "yarn style-validate; yarn es-validate; yarn prettier-validate",
    "fix": "yarn style-fix; yarn es-fix; yarn prettier-fix",
    "watch-css": "chokidar 'src/**/*.{css,scss}' -c 'sh ./scripts/lintCss.sh {path}'",
    "watch-js": "chokidar 'src/**/*.{js,jsx,ts,tsx}' -c 'sh ./scripts/lintJs.sh {path}'",
    "watch-env": "chokidar '.env' -c 'yarn generate-env'",
    "generate-env": "sh scripts/env.sh local",
    "create-component": "sh scripts/component.sh",
    "create-page": "sh scripts/page.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "postcss-preset-env": "^9.5.8",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
